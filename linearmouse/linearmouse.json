{
  "$schema" : "https:\/\/schema.linearmouse.app\/0.7.6",
  "schemes" : [
    {
      "if" : {
        "device" : {
          "category" : "mouse"
        }
      },
      "pointer" : {
        "disableAcceleration" : true
      },
      "scrolling" : {
        "reverse" : {
          "vertical" : true
        },
        "distance" : 3
      }
    },
    {
      "if" : [
        {
          "app" : "com.adobe.photoshop-image",
          "device" : {
            "category" : "mouse"
          }
        },
        {
          "app" : "com.adobe.illustrator",
          "device" : {
            "category" : "mouse"
          }
        },
        {
          "app" : "com.adobe.PremierePro.22",
          "device" : {
            "category" : "mouse"
          }
        },
        {
          "app" : "com.adobe.LightroomClassicCC7",
          "device" : {
            "category" : "mouse"
          }
        }
      ],
      "scrolling" : {
        "distance" : "auto"
      }
    },
    {
      "if" : {
        "app" : "com.microsoft.VSCode",
        "device" : {
          "category" : "mouse"
        }
      },
      "scrolling" : {
        "distance" : 1
      }
    }
  ]
}