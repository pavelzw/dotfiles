// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "tab_size": 2,
  "buffer_font_family": "Comic Code",
  "language_models": {
    "openai": {
      "version": "1",
      "api_url": "http://localhost:11434/v1"
    }
  },
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2",
    "provider": null
  },
  "collaboration_panel": {
    "button": true
  },
  "chat_panel": {
    "button": false
  },
  "terminal": {
    "button": true,
    "dock": "bottom",
    // "detect_venv": {
    //   "on": {
    //     "activate_script": "fish"
    //   }
    // },
    "detect_venv": "off",
    // "working_directory": "current_project_directory"
    "font_family": "Comic Code"
  },
  "theme": {
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Macchiato"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "autosave": "off",
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "format_on_save": "on",
  "git": {
    "inline_blame": {
      "enabled": true
    }
  },
  "file_types": {
    "YAML": ["pixi.lock"]
  },
  "languages": {
    "Python": {
      "formatter": {
        "external": {
          "command": "ruff",
          "arguments": ["format", "-"]
        }
      },
      "format_on_save": "off"
    },
    "YAML": {
      "format_on_save": "off"
    },
    "TOML": {
      "formatter": {
        "external": {
          "command": "taplo",
          "arguments": ["format", "-"]
        }
      }
    },
    "Rust": {
      "inlay_hints": {
        "enabled": true
      }
    }
  }
}
